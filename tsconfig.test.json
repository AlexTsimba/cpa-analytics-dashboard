{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-jsx"
  },
  "include": [
    "tests/**/*",
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules", "dist", ".next", "coverage"]
}
