{
  "name": "cpa-analytics-dashboard",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:strict": "next lint --max-warnings 0",
    "lint:check": "next lint --quiet",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "commitlint": "commitlint --edit",
    "commitlint:check": "commitlint --from HEAD~1 --to HEAD --verbose",
    "commitlint:last": "commitlint --last --verbose",
    "quality": "npm run type-check && npm run lint:strict && npm run format:check && npm run test:coverage && npm run commitlint:last",
    "prepare": "husky",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --project unit",
    "test:integration": "vitest run --project integration",
    "test:watch": "vitest --watch",
    "test:watch:ui": "vitest --ui --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install --with-deps",
    "commit:help": "./scripts/git-semantic.sh examples",
    "commit:validate": "./scripts/git-semantic.sh validate",
    "commit:interactive": "./scripts/git-semantic.sh commit",
    "git:status": "./scripts/git-semantic.sh status",
    "pipeline:check": "./scripts/check-pipeline.sh",
    "pipeline:health": "./scripts/check-pipeline.sh",
    "deploy:check": "npm run build && npm run test:run && npm run test:e2e",
    "release:ready": "npm run quality && npm run test:e2e && echo 'ðŸš€ Ready for release!'"
  },
  "dependencies": {
    "next": "15.3.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.52.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitejs/plugin-react": "^4.5.0",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-unused-imports": "^4.1.4",
    "happy-dom": "^17.5.6",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-node": "^30.0.0-beta.3",
    "lint-staged": "^16.1.0",
    "prettier": "3.5.3",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --no-warn-ignored"
    ],
    "*.{test,spec}.{js,jsx,ts,tsx}": [
      "vitest run --changed"
    ]
  }
}
